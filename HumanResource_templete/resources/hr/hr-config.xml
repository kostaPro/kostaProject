<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
  
  <configuration>
  	<properties resource="hr/dataresource.properties"/>

  	<typeAliases>
  		<typeAlias type="hr.domain.Department" alias="Department"/>
  		<typeAlias type="hr.domain.Employee" alias="Employee"/>
  	</typeAliases>
  	
  	<environments default="development">
  		<environment id="development">
  			<transactionManager type="JDBC"/>
  			<dataSource type="pooled">
  				<property name="driver" value="${driver}"/>
  				<property name="url" value="${url}"/>
  				<property name="username" value="${username}"/>
  				<property name="password" value="${password}"/>
  			</dataSource>
  		</environment>
  	</environments>
  	
  	
  	<mappers>
  		<mapper resource="hr/mapper/EmployeeMapper.xml"/>
  		<mapper resource="hr/mapper/DepartmentMapper.xml"/>
  	</mappers>
  </configuration>